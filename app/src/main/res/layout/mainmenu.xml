<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_below="@+id/textView3"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_launcher"
                android:foreground="@mipmap/ic_launcher"
                app:srcCompat="@mipmap/ic_launcher"
                tools:layout_editor_absoluteX="120dp"
                tools:layout_editor_absoluteY="25dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="Dash Board"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/membername"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Member Name "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/memberaccount"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="Account Name "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/memberbalance"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="133dp"
        android:ems="10"
        android:hint="Account Balance"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView14"
        android:layout_width="399dp"
        android:layout_height="43dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="336dp"
        android:ems="10"
        android:text="Trans" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bottom_navigation"
                android:layout_alignParentBottom="true"
                app:menu="@menu/bottom_nav_menu"
                app:itemBackground="@color/colorPrimary"
                app:itemIconTint="@android:color/white"
                app:itemTextColor="@android:color/white" />

    <Button
        android:id="@+id/button"
        android:layout_width="191dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="106dp"
        android:layout_marginLeft="106dp"
        android:layout_marginTop="374dp"
        android:background="@mipmap/transfer_1"
        android:text="Transfer" />

    <Button
        android:id="@+id/button14"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="460dp"
        android:layout_marginBottom="235dp"
        android:background="@color/colorPrimaryDark"
        android:text="Show More Transactions"
        android:textColor="@color/design_default_color_on_primary" />

</RelativeLayout>


